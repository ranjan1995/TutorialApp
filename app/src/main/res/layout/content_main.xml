<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:gravity="center"
        android:padding="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:layout_margin="20dp"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="15dp"
                android:text="This tutorial teaches you the basic things about Java.
Java is a programming language.
Java is used to develop mobile apps, web apps, desktop apps, games and much more.."
                android:textAlignment="center"
                android:textColor="#00F"
                android:textSize="17dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/htmlBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/html" />

                    <ImageView
                        android:id="@+id/cssBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/css" />

                    <ImageView
                        android:id="@+id/javaBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/javalogo" />

                    <ImageView
                        android:id="@+id/reactBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/reactjs" />

                    <ImageView
                        android:id="@+id/swiftBtn"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_margin="16dp"
                        android:src="@drawable/swift" />

                </LinearLayout>
            </HorizontalScrollView>

    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>